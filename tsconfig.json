{
  "compilerOptions": {
    "outDir": "./dist/",
    "module": "commonjs",
    "target": "es5",
    "allowJs": true,
    "noEmitOnError": true,
    "strictNullChecks": true,
    "sourceMap": false,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "lib": [
      "es2016",
      "dom"
    ]
  },
  "include": [
    "src/**/*"
  ]
}